            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_hold_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
