                android:textColor="@color/material_grey_300"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text=" to "
                android:textSize="24dp"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/spa_light_schedule_end_btn"
                android:layout_toRightOf="@id/spa_light_schedule_dash"
                android:padding="8dp"
                android:text="2:30 pm"
                android:textSize="28dp"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
        </LinearLayout>

	</LinearLayout>

    <RelativeLayout
        android:id="@+id/spa_light_modes_label_container"
        android:layout_below="@id/spa_light_schedule_container"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/spa_light_modes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_grey_300"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Spa Light Modes" />

            <TextView
                android:id="@+id/spa_light_selected_light_mode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:visibility="gone"
                android:textColor="@color/orangeHolo"
                android:gravity="center_horizontal"
                tools:text="Party Mode" />
        </LinearLayout>

        <TextView
            android:id="@+id/spa_light_modes_expand_textview"
            android:text="show/hide >>"
            android:textColor="@color/lightblue"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/spa_light_mode_btns_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:orientation="vertical"
        android:layout_below="@+id/spa_light_modes_label_container">

        <Button
            android:id="@+id/spa_light_sam_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="SAM: Cycles through white, magenta, blue and green colors (emulates the Pentair SAM color changing light)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_party_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Party Mode: Rapid color changing building energy and excitement. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_romance_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Romance Mode: Slow color transitions creating a mesmerizing and calming effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_caribbean_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Caribbean Mode: Transitions between a variety of blues and greens"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_american_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
