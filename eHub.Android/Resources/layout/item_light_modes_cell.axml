            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_blue_fixed_mode_button"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_green_fixed_mode_button"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_red_fixed_mode_button"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
            android:textSize="16sp"
            android:text="Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/spa_light_white_fixed_mode_button"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_bluegray_8dp"
            android:textAllCaps="false"
            android:textColor="@color/material_grey_300"
