<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<ProgressBar
		android:id="@+id/home_progress_bar"
		style="?android:attr/progressBarStyleHorizontal"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:indeterminate="true"
		android:indeterminateTint="@color/colorPrimary"
		android:max="100" />

	<RelativeLayout
		android:id="@+id/home_header_layout"
		android:layout_below="@id/home_progress_bar"
		android:padding="24dp"
		android:background="@color/material_grey_900"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/home_logo_layout"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content">

			<ImageView 
				android:id="@+id/home_image"
				android:layout_centerVertical="true"
				android:paddingStart="16dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_device_hub_blue_dark_48dp" />

			<TextView 
				android:text="PoolController"
				android:layout_toEndOf="@id/home_image"
				android:layout_centerVertical="true"
				android:textSize="24dp"
				android:textStyle="bold"
				android:layout_marginLeft="16dp"
				android:textColor="@color/material_grey_300"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
	</RelativeLayout>

	<TextView 
		android:id="@+id/home_status_label"
		android:gravity="center"
		android:textSize="20dp"
		android:visibility="gone"
		android:layout_centerInParent="true"
		android:text="Could not connect to pool!"
		android:textColor="@android:color/holo_orange_dark"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/home_refresh_layout"
		android:layout_below="@id/home_header_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.v7.widget.RecyclerView 
			android:id="@+id/home_recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
