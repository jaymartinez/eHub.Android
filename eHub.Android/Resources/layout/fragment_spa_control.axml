<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/material_grey_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout 
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView 
			android:id="@+id/spa_pump_label"
			android:textSize="24dp"
			android:visibility="gone"
			android:textColor="@color/colorPrimary"
			android:text="Pump"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/spa_toggle_image"
			android:layout_below="@id/spa_pump_label"
			android:visibility="gone"
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:src="@drawable/icons8_switch_off_80" />

		<TextView 
			android:id="@+id/spa_message_text"
			android:textSize="18dp"
			android:visibility="gone"
			android:layout_below="@id/spa_toggle_image"
			android:textColor="@android:color/holo_red_dark"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView 
			android:id="@+id/spa_light_label"
			android:layout_marginTop="32dp"
			android:textSize="24dp"
			android:layout_below="@id/spa_message_text"
			android:visibility="gone"
			android:textColor="@color/colorPrimary"
			android:text="Light"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/spa_lights_toggle_image"
			android:visibility="gone"
			android:layout_below="@id/spa_light_label"
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:src="@drawable/icons8_switch_off_80" />

		<TextView 
			android:id="@+id/spa_lights_message_text"
			android:textSize="18dp"
			android:visibility="gone"
			android:layout_below="@id/spa_lights_toggle_image"
			android:textColor="@android:color/holo_red_dark"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</RelativeLayout>
</RelativeLayout>
